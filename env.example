# Slack MCP Server Environment Variables

# Slack Bot Token (starts with xoxb-)
# Get this from https://api.slack.com/apps -> Your App -> OAuth & Permissions
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Slack App Token (starts with xapp-)
# Get this from https://api.slack.com/apps -> Your App -> Basic Information -> App-Level Tokens
SLACK_APP_TOKEN=xapp-your-app-token-here

# Optional: Default channel to read from (channel ID or name)
# You can also specify channels when making requests
DEFAULT_CHANNEL=general

# Optional: Number of messages to fetch by default
DEFAULT_MESSAGE_LIMIT=50

# GitHub MCP Server Environment Variables

# GitHub Personal Access Token (starts with ghp_)
# Get this from https://github.com/settings/tokens
# Required scopes: repo, issues, pull_requests, workflow
GITHUB_TOKEN=ghp_your_token_here

# n8n MCP Server Environment Variables

# n8n Instance URL (e.g., https://your-n8n-instance.com or http://localhost:5678)
N8N_API_URL=https://shoreagents.app.n8n.cloud

# n8n API Key (found in Settings -> API Keys)
N8N_API_KEY=your_n8n_api_key_here

# Echo Agent Environment Variables

# Claude API Key (starts with sk-ant-)
# Get this from Anthropic Console -> API Keys
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here

# Claude Model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Echo Personality Settings
ECHO_PERSONALITY=energetic
ECHO_AUTONOMOUS=true
ECHO_INTELLIGENT=true