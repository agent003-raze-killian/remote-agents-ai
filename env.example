PENETRATION_TEST_DEPTH=medium

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_RETENTION_DAYS=30
ALERT_THRESHOLD_RESPONSE_TIME=1000

# Notification Configuration
NOTIFICATION_WEBHOOK_URL=your_webhook_url_here
NOTIFICATION_CHANNEL=#apex-alerts

# Database Configuration (if using database features)
DATABASE_URL=postgresql://user:password@localhost:5432/apex_db
