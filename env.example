# APEX AGENT MCP SERVER - ENVIRONMENT CONFIGURATION ⚔️

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_username
GITHUB_REPO=your_repository

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Browser Testing Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Configuration
NODE_ENV=development
DEBUG=apex:*

# APEX Agent Configuration
AGENT_NAME=APEX-003
AGENT_CALLSIGN=RAZE
AGENT_ROLE=API Routes & Security Fortress
AGENT_SPECIALTY=REST APIs, Auth Systems, Penetration Testing, Zero-Day Hunting

# Security Scanning Configuration
SECURITY_SCAN_TIMEOUT=30000
